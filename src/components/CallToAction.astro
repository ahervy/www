---
interface Props {
	href?: string;
	target?: string;
	rel?: string;
	class?: string;
	type?: 'button' | 'submit' | 'reset';
	disabled?: boolean;
	loading?: boolean;
	ariaLabel?: string;
}

const {
	href,
	target,
	rel,
	class: className,
	type = 'button',
	disabled = false,
	loading = false,
	ariaLabel,
} = Astro.props;
---

{
	href ? (
		<a
			href={href}
			{...(target ? { target } : {})}
			{...(rel ? { rel } : {})}
			class={`cta${className ? ` ${className}` : ''}`}
			aria-label={ariaLabel}
		>
			<slot />
		</a>
	) : (
		<button
			type={type}
			class={`cta${className ? ` ${className}` : ''}`}
			disabled={disabled || loading}
			aria-label={ariaLabel}
		>
			<slot />
		</button>
	)
}
