---
import type { HTMLAttributes } from 'astro/types';
import { iconPaths } from './IconPaths';

interface Props {
	icon: keyof typeof iconPaths;
	color?: string;
	size?: string;
}

const { color = 'currentcolor', icon, size } = Astro.props;
const iconPath = iconPaths[icon];

// Default icon size to 1em so icons scale with font-size when no explicit size provided.
const sizeValue = size ?? '1em';
const attrs: HTMLAttributes<'svg'> = {};
// Expose CSS variable and set width/height via inline style so callers can pass sizes like '1.2em' or '24px'.
attrs.style = { '--size': sizeValue, width: 'var(--size)', height: 'var(--size)' };
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox="0 0 256 256"
	aria-hidden="true"
	stroke={color}
	fill={color}
	{...attrs}
>
	<g set:html={iconPath} />
</svg>
