---
import CallToAction from "./CallToAction.astro";
import Icon from "./Icon.astro";
---

<aside>
	<div class="contact-content">
		<h2>
			Need a technical writer to improve your documentation?
		</h2>
		<CallToAction href="/contact/" aria-label="Contact Arnaud Hervy">
			Send a message
			<Icon icon="arrow-right" size="1.2em" />
		</CallToAction>
	</div>
</aside>

<style>
	aside {
		background-color: var(--gray-800);
		padding: 5rem 1.5rem;
		display: flex;
		justify-content: center;
	}

	.contact-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		max-width: 60rem;
		text-align: center;
	}

	h2 {
		font-size: var(--text-xl);
		color: var(--gray-100);
		max-width: 30ch;
		line-height: 1.3;
	}

	@media (min-width: 50em) {
		aside {
			padding: 7.5rem;
		}

		.contact-content {
			flex-direction: row;
			justify-content: flex-start;
			align-items: center;
			text-align: left;
		}

		h2 {
			font-size: var(--text-3xl);
			max-width: 25ch;
		}
	}
</style>
