---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection("portfolio")).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="My portfolio | Arnaud Hervy"
	description="Explore Arnaud Hervy's portfolio: user guides, how-to guides, API documentation, and microcopy â€“ all designed to help users get the most out of products and services."
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="My portfolio"
				tagline="Explore my work samples to get an idea of the content I create."
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<PortfolioPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
